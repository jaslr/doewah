[Unit]
Description=DOEWAH Claude Code Telegram Bot
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/claude-bot
ExecStart=/bin/bash -c 'source /root/doewah/.env && exec /usr/bin/node /root/claude-bot/bot.js'
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# Give it time to shut down gracefully
TimeoutStopSec=10

[Install]
WantedBy=multi-user.target
